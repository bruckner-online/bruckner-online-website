{
	"name": "@acdh-oeaw/bruckner-online-website",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^24"
	},
	"packageManager": "pnpm@10.22.0",
	"scripts": {
		"build": "astro build",
		"dev": "astro dev",
		"format:check": "prettier . \"!./content/**\" --cache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(astro|css)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup",
		"setup": "is-in-ci || simple-git-hooks",
		"start": "astro preview",
		"sync": "astro sync",
		"test": "exit 0",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:update-snapshots": "playwright test --update-snapshots",
		"types:check": "astro check",
		"typesense:populate": "dotenv -c -- tsx ./src/scripts/populate-typesense.ts",
		"validate": "run-s format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.3.5",
		"@acdh-oeaw/validate-env": "^0.1.1",
		"@astrojs/mdx": "^4.3.10",
		"@astrojs/node": "^9.5.0",
		"@astrojs/react": "^4.4.2",
		"@astrojs/rss": "^4.0.13",
		"@astrojs/sitemap": "^3.6.0",
		"@astrojs/solid-js": "^5.1.3",
		"@floating-ui/dom": "^1.7.4",
		"@fontsource-variable/open-sans": "^5.2.7",
		"@fontsource/open-sans-condensed": "^4.5.5",
		"@iconify-json/lucide": "^1.2.73",
		"@keystatic/astro": "^5.0.6",
		"@keystatic/core": "^0.5.48",
		"@mdx-js/mdx": "^3.1.1",
		"@sindresorhus/slugify": "^3.0.0",
		"@types/leaflet": "^1.9.21",
		"algoliasearch": "^5.44.0",
		"astro": "^5.15.8",
		"astro-icon": "^1.1.5",
		"cva": "^1.0.0-beta.4",
		"estree-util-value-to-estree": "^3.5.0",
		"hast-util-heading-rank": "^3.0.0",
		"hast-util-to-string": "^3.0.1",
		"instantsearch.js": "^4.83.0",
		"leaflet": "^1.9.4",
		"leaflet.markercluster": "^1.5.3",
		"lucide-react": "^0.554.0",
		"mirador": "3.4.3",
		"nodemailer": "^7.0.10",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"rehype-mdx-import-media": "^1.2.0",
		"rehype-slug": "^6.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-mdx-frontmatter": "^5.2.0",
		"remark-smartypants": "^3.0.2",
		"retext-smartypants": "^6.2.0",
		"sharp": "^0.34.5",
		"simple-datatables": "^10.2.0",
		"solid-js": "^1.9.10",
		"typesense": "^2.0.3",
		"typesense-instantsearch-adapter": "^2.9.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0",
		"valibot": "^1.1.0",
		"vfile": "^6.0.3",
		"vite": "^6.4.1"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.10",
		"@acdh-oeaw/eslint-config-astro": "^2.0.14",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.12",
		"@acdh-oeaw/eslint-config-react": "^3.0.2",
		"@acdh-oeaw/eslint-config-solid": "^2.0.12",
		"@acdh-oeaw/eslint-config-tailwindcss": "^3.0.2",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.3.2",
		"@acdh-oeaw/tailwindcss-preset": "^0.0.22",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@astrojs/check": "^0.9.5",
		"@astrojs/ts-plugin": "^1.10.5",
		"@playwright/test": "^1.56.1",
		"@types/estree": "^1.0.8",
		"@types/hast": "^3.0.4",
		"@types/leaflet.markercluster": "^1.5.6",
		"@types/mdast": "^4.0.4",
		"@types/mdx": "^2.0.13",
		"@types/node": "^24.10.1",
		"@types/nodemailer": "^7.0.3",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"autoprefixer": "^10.4.22",
		"axe-core": "^4.11.0",
		"axe-playwright": "^2.2.2",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^11.0.0",
		"dotenv-expand": "^12.0.3",
		"eslint": "^9.39.1",
		"eslint-config-flat-gitignore": "^2.1.0",
		"globals": "^16.5.0",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.2.6",
		"mdast-util-mdx-jsx": "^3.2.0",
		"npm-run-all2": "^8.0.4",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^16.25.0",
		"tailwindcss": "^3.4.17",
		"tsx": "^4.20.6",
		"type-fest": "^5.2.0",
		"typescript": "^5.9.3"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.astro": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.css": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(js|ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(astro|css|js|ts|tsx),!./content/**": "prettier --cache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
